package servlets;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class RegistrujKompaniju
 */
@WebServlet("/RegistrujKompanijuServlet")
public class RegistrujKompanijuServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public RegistrujKompanijuServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		RequestDispatcher rd = getServletContext().getRequestDispatcher("/registrujKompaniju.jsp");
		rd.forward(request,response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		String poruka4="";
		String nazivKompanije = request.getParameter("nazivKompanije");
		String adresa = request.getParameter("adresa");
		String linkSlike = request.getParameter("link");
		String procenatZarade = request.getParameter("procenat");
		String ime = request.getParameter("ime");
		String prezime = request.getParameter("prezime");
		String username = request.getParameter("username");
		String drzava = request.getParameter("drzava");
		String grad = request.getParameter("grad");
		String ulica = request.getParameter("ulica");
		String godine = request.getParameter("godine");
		String password = request.getParameter("password");
		String passwordConfirm = request.getParameter("passwordConfirm");
		
		if(nazivKompanije=="" || adresa=="" || linkSlike=="" || procenatZarade=="" || ime=="" || username=="" || prezime=="" || drzava=="" || grad=="" || ulica=="" || godine=="" || password=="" || passwordConfirm=="") {
			poruka4="trebaPopuniti";
		}else {
			if(true) {
				poruka4="uspesno";
			}else {
				poruka4="neuspesno";
			}
		}
		request.setAttribute("poruka4", poruka4);
		doGet(request, response);
	}

}
